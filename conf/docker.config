/*
========================================================================================
    Docker configuration for pipeline
========================================================================================
    Configuration for Docker container execution
----------------------------------------------------------------------------------------
*/

docker {
    enabled         = true
    userEmulation   = true
    runOptions      = '-u $(id -u):$(id -g)'
}

process {
    // Default container
    container = 'quay.io/biocontainers/mulled-v2-base:latest'
    
    // Process-specific containers can be defined here
    // Example:
    // withName: 'PROCESS_NAME' {
    //     container = 'specific/container:tag'
    // }
}
