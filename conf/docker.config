/*
========================================================================================
    Docker configuration for pipeline
========================================================================================
    Configuration for Docker container execution
    For macOS ARM64: Uses x86_64 emulation via --platform linux/amd64
    
    This profile uses Docker containers with conda environments inside them.
    Conda environments are created inside the container at runtime.
----------------------------------------------------------------------------------------
*/

docker {
    enabled         = true
    runOptions      = '--platform=linux/amd64'
}

conda {
    enabled         = true
    useMamba        = false
    createTimeout   = '2 h'
    docker.image    = 'continuumio/miniconda3:latest'
}

process {
    // Use miniconda3 container which has conda pre-installed
    // Conda environments will be created inside this container
    container = 'continuumio/miniconda3:latest'
}
